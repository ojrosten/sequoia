      "inherits": ["base-ninja"]
    },
    {
      "name": "msvc",
      "displayName": "MSVC [Debug]",
      "configurePreset": "msvc",
      "configuration": "Debug"
    },
    {
      "name": "msvc-asan",
      "displayName": "MSVC [Debug, asan]",
