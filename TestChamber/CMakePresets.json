{
  "version": 10,
  "configurePresets": [
    {
      "name": "base-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "base-asan",
      "cacheVariables": {
          "CMAKE_CXX_FLAGS": "-fsanitize=address",
          "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address"
      }
    },
    {
      "name": "base-asan-msvc",
      "cacheVariables": {
          "CMAKE_CXX_FLAGS": "/fsanitize=address /EHsc"
      }
    },
    {
      "name": "base-binary",
      "binaryDir": "${sourceDir}/../build/${sourceDirName}/${presetName}"
    },
    {
      "name": "base-homebrew-llvm",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
      }
    },
    {
      "name": "base-ubuntu-gcc",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-15"
      }
    },
    {
      "name": "macos-homebrew-llvm",
      "displayName": "macOS Homebrew LLVM (Debug)",
      "description": "Configure for ${displayName}",
      "inherits": ["base-debug", "base-binary", "base-homebrew-llvm"]
    },
    {
      "name": "macos-homebrew-llvm-asan",
      "displayName": "macOS Homebrew LLVM (Debug/asan)",
      "description": "Configure for ${displayName}",
      "inherits": ["macos-homebrew-llvm", "base-asan"]
    },
    {
      "name": "ubuntu-gcc",
      "displayName": "Ubuntu g++-15 (Debug)",
      "description": "Configure for ${displayName}",
      "inherits": ["base-debug", "base-binary", "base-ubuntu-gcc"]
    },
    {
      "name": "ubuntu-gcc-asan",
      "displayName": "Ubuntu g++-15 (Debug/asan)",
      "description": "Configure for ${displayName}",
      "inherits": ["ubuntu-gcc", "base-asan"]
    },
    {
      "name": "msvc",
      "displayName": "Visual Studio",
      "description": "Configure for ${displayName}",
      "generator": "Visual Studio 17 2022",
      "inherits": ["base-binary"]
    },
    {
      "name": "msvc-asan",
      "displayName": "Visual Studio (asan)",
      "description": "Configure for ${displayName}",
      "generator": "Visual Studio 17 2022",
      "inherits": ["msvc", "base-asan-msvc"]
    }
  ],
  "buildPresets": [
    {
      "name": "macos-homebrew-llvm",
      "displayName": "macOS Homebrew LLVM (Debug)",
      "configurePreset": "macos-homebrew-llvm"
    },
    {
      "name": "macos-homebrew-llvm-asan",
      "displayName": "macOS Homebrew LLVM (Debug/asan)",
      "configurePreset": "macos-homebrew-llvm-asan"
    },
    {
      "name": "ubuntu-gcc",
      "displayName": "Ubuntu g++-15 (Debug)",
      "configurePreset": "ubuntu-gcc"
    },
    {
      "name": "ubuntu-gcc-asan",
      "displayName": "Ubuntu g++-15 (Debug/asan)",
      "configurePreset": "ubuntu-gcc-asan"
    }
  ]
}
