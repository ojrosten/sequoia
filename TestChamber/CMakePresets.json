{
  "version": 10,
  "configurePresets": [
    {
      "name": "base-homebrew-llvm",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "macos-homebrew-llvm",
      "displayName": "macOS Homebrew LLVM (Debug)",
      "description": "Configure for macOS using Homebrew's clang++",
      "inherits": ["base-homebrew-llvm"],
      "binaryDir": "${sourceDir}/../build/macos-homebrew-llvm"
    }
  ],
  "buildPresets": [
    {
      "name": "macos-homebrew-llvm",
      "displayName": "macOS (Homebrew LLVM)",
      "configurePreset": "macos-homebrew-llvm"
    }
  ]
}
